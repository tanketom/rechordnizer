{
  "name": "rechordnizer",
  "version": "1.0.0",
  "description": "Real-time piano chord recognition from microphone input",
  "author": {
    "name": "Andreas Hadsel Opsvik",
    "email": "andreas.h.opsvik@pm.me"
  },
  "homepage": "https://github.com/tanketom/rechordnizer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --mac --win --linux",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.andreasopsvik.rechordnizer",
    "productName": "Rechordnizer",
    "files": [
      "main.js",
      "renderer/**/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": "dmg",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "Rechordnizer"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Audio"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  }
}
